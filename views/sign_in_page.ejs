<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign in Page</title>
</head>
<style>
    body{
        font-family: Arial, Helvetica, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    h2 {
        text-align: center;

    }
    form {
        min-width: 350px;
        width: 50%;
    }
    input {
        display: block;
        width: 100%;
        margin-top: 15px;
        margin-bottom: 15px;
        border-radius: 0%;
        height: 50px;
    }
    .err {
        color: crimson;
        margin-top: 15px;
        margin-bottom: 15px;
    }
    button {
        width: 100%;
        height: 50px;
        background-color: #04AA6D;
        color: whitesmoke;
    }
    button:hover {
        background-color: gray;
        color: whitesmoke;
    }
    a {
        text-decoration: none;
        color: blue;
    }
    a:visited {
        color: blue;
    }
    a:hover {
        color: #04AA6D;
    }
    .noaccess {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 50px;
        background-color: red;
        color: whitesmoke;
    }
</style>
<body>
    <%
    if (typeof params === 'undefined') params = {};
    if (typeof err === 'undefined') err = '';
    if (typeof noaccess === 'undefined') noaccess = '';
    function showErr(message) {
    if (message !== undefined && message !== '') {
        return `${message}`;
    } else {
        return '';
    }
    }
    %>
    <form action="/" method="post">
        <h2>Sign in to Email</h2>
        <%- noaccess %>
        <div>
            <label for="email"><b>Email</b></label>
            <input type="text" name="email" id="email" placeholder="Enter Your Email" value="<%= params.email %>">
            <label for="password"><b>Password</b></label>
            <input type="password" name="password" id="password" placeholder="Enter your Password" value="<%= params.password %>">
            <p class="err"><%= showErr(err) %></p>
            <button type="submit">Sign-in</button>
            <p>Not have an account? <a href="/signup">Sign up</a></p>
        </div>
    </form>
</body>
</html>